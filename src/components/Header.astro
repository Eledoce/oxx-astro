---
import { Image } from 'astro:assets'
import logo from '../assets/logoBlanco.png'
import urlBase from '@/scripts/base'
---

<header>
  <a href=`${urlBase}/`>
    <Image src={logo} alt="logo oox" class="image" />
  </a>
  <nav>
    <a href=`${urlBase}/productos`>Productos</a>
  </nav>
</header>

<style>
  header {
    @apply bg-black p-2 px-10 flex text-white justify-between;
  }
  .image {
    @apply h-14 w-auto;
  }
  nav {
    @apply flex items-center gap-3 text-xl font-bold font-Inter uppercase tracking-wider;
  }
</style>
